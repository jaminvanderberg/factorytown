{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "server:run",
            "type": "shell",
            "command": "php bin/console server:run",
            "problemMatcher": [],
            "group" : "build"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "rundll32 url.dll,FileProtocolHandler http://localhost:8000",
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "yarn encore dev",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}